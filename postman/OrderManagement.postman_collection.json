						],
						"url": {
							"raw": "{{base_url}}/api/orders?customerId=1&page=1&pageSize=10",
							"host": ["{{base_url}}"],
							"path": ["api", "orders"],
							"query": [
								{
									"key": "customerId",
									"value": "1"
