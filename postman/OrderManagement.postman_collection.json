						"body": {
							"mode": "raw",
							"raw": "{\n    \"status\": 2\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/orders/{{order_id}}/status",
							"host": ["{{base_url}}"],
							"path": ["api", "orders", "{{order_id}}", "status"]
						},
						"description": "Atualiza o status de um pedido (0=Pending, 1=Confirmed, 2=Processing, 3=Shipped, 4=Delivered, 5=Cancelled)"
					}
				},
				{
					"name": "Cancel Order",
